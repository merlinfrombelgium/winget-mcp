{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "WinGetMcpServer": "Debug"
    }
  },
  "McpServer": {
    "ServerName": "WinGet MCP Server (.NET)",
    "Version": "1.0.0",
    "EnableInstallOperations": false,
    "Cache": {
      "Enabled": true,
      "DefaultExpirationMinutes": 5,
      "SlidingExpirationMinutes": 2,
      "MaxCacheSize": 1000
    },
    "Security": {
      "MaxQueryLength": 256,
      "MaxResultsPerQuery": 50,
      "EnableInputSanitization": true,
      "LogSecurityEvents": true,
      "AllowedSources": ["winget", "msstore"]
    },
    "Performance": {
      "MaxConcurrentOperations": 4,
      "DefaultTimeoutSeconds": 30,
      "EnablePerformanceLogging": true
    }
  }
} 